escape ^J^J
ignorecase on

# For emacs like key binding for copy mode
markkeys "h=^B:j=^N:k=^P:l=^F:$=^E"
markkeys ' '=^@
bindkey ^J^Y paste .

shell /bin/tcsh
shelltitle '> |:'
hardstatus alwayslastline "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %Y/%m/%d %D %0c:%s"
hardstatus off
startup_message off

#termcapinfo xterm 'hs:ts=\E]1;:fs=\007:ds=\E]2;screen\007'

#Disable unused bindings
bind ^F
bind f
bind ^S
bind s
bind ^X
bind x



